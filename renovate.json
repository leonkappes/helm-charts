{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "bumpVersion": "minor",
  "regexManagers": [
     {
       "fileMatch": [
         "^Chart.yaml$"
       ],
       "matchStrings": [
         "appVersion: \"(?<currentValue>.*?)\"\\s*",
         "\\s*image: (?<depName>.*?)\\s*"
       ],
       "datasourceTemplate": "docker"
     }
   ],
   "helmv3": {
     "fileMatch": [
       "^Chart.yaml$"
     ]
   }
}
